<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <link rel="icon" href="/favicon.ico" />
  <style>
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }

    h1,
    p,
    label,
    input,
    button {
      margin-bottom: 10px;
    }

    img {
      border-radius: 50%;
      margin-bottom: 20px;
    }

    #displayButton {
      padding: 10px;
      background-color: #4285f4;
      color: white;
      border: none;
      cursor: pointer;
    }

    #displayButton:hover {
      background-color: #357ae8;
    }
  </style>
</head>

<body>
  <% if (user) { %>
    <% if (user._json && user._json.picture) { %>
      <img src="<%= user._json.picture %>" alt="Profile Photo">
    <% } %>
    <h1>Hello <%= user.displayName %></h1>
    <a href="/logout" id="signOutButton">[Sign Out]</a>

    <% if (user.emails && user.emails.length > 0) { %>
      <p>You are signed in with mail id: <%= user.emails[0].value %></p>
    <% } else { %>
      <p>You are signed in with mail id: ipsai047@gmail.com</p>
    <% } %>

    <p>Current Indian Time: <%= indianTime %></p>

    <label for="numLines">Number of Lines:</label>
    <input type="number" id="numLines" name="numLines" min="1" max="100">
    <button id="displayButton">Display</button>
    <div id="designContainer"></div>

    <script src="/script.js"></script>
  <% } else { %>
    <a href="/auth/google" id="signInButton">Sign in with Gmail</a>
  <% } %>
</body>

</html>
